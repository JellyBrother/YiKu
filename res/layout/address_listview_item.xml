<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/shouhuo_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/check_enable" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="#FFF" >

            <LinearLayout
                android:id="@+id/customer_info_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="收货人:"
                    android:textColor="#8F8F8F"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/shouhuo_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#cc000000"
                    android:textSize="13sp" 
                    android:singleLine="true"
                    />

                <TextView
                    android:id="@+id/shouhuo_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#cc000000"
                    android:textSize="13sp" 
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/customer_info_linearlayout"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="收货地址:"
                    android:textColor="#8F8F8F"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/shouhuo_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#cc000000"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/shouhuo_update"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/right_icon" 
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</LinearLayout>