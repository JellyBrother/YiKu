<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_back_ground"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF" >

        <ImageView
            android:id="@+id/activity_back_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/fuwubao_back" />

        <TextView
            android:id="@+id/activity_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="订单详情"
            android:textColor="#000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/activity_handle_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/tell"
            android:padding="5dp" />
    </RelativeLayout>
    
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#C9C9C9"
        />
    
    <LinearLayout 
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFF"
        >
        
        <RelativeLayout
            android:id="@+id/oder_detail_order_status_layout"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            >
            
            <TextView
                android:id="@+id/order_detail_line_tips1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="订单状态"
                android:padding="10dp"
                android:textSize="18sp"
                android:textColor="@color/login_back_ground"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            
            <View
                android:id="@+id/order_detail_line1"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/login_back_ground"
                />
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/oder_detail_order_details_layout"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            >
            
            <TextView
                android:id="@+id/order_detail_line_tips2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="订单详情"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            
            <View
                android:id="@+id/order_detail_line2"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/line_back_ground"
                />
            
        </RelativeLayout>
        
    </LinearLayout>
    
	<android.support.v4.view.ViewPager
	    android:id="@+id/order_detail_vp"
	    android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    ></android.support.v4.view.ViewPager>	
    

</LinearLayout>