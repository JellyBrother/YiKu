<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="50dp" >
    
    <Button
        android:id="@+id/order_product_list_item_makesure_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="确认收货"
        android:background="@drawable/login_btn_png"
        android:textColor="#FFF"
        android:padding="5dp"
        android:layout_centerVertical="true"
        />
    
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxLength="15"
        android:text="mammm"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/lv_se"
        android:id="@+id/order_product_list_item_name"
        android:padding="10dp"
        android:drawablePadding="3dp"
        />
    
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="x1"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/order_product_list_item_name"
        android:layout_toLeftOf="@id/order_product_list_item_makesure_btn"
        android:layout_marginRight="5dp"
        android:id="@+id/order_product_list_item_count_tv"
        android:padding="10dp"
        android:drawablePadding="3dp"
        />

</RelativeLayout>
