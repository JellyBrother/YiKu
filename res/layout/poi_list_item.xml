<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

   
    
    <LinearLayout
        android:id="@+id/store"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hotel_comm_listview_selector"
        android:orientation="vertical"
        android:padding="5.0dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="3.0dip"
                android:layout_toRightOf="@+id/iv_order"
                android:singleLine="true"
                android:text="常州店"
                android:textColor="@color/blue"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/store_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="3.0dip"
                android:singleLine="true"
                android:text="常州店"
                android:textColor="@color/blue"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_name"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_order"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/store_address"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:text="2012-12-12"
                android:textColor="@color/celltitle"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>
    
      <TextView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.0dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/iv_order"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:text="常州店"
                android:textColor="@color/black"
                android:textSize="16.0sp" />
      <ImageView android:layout_height="20dp" android:layout_width="20dp" 
          android:src="@drawable/loc_search"
          android:layout_marginLeft="3dp"
          android:layout_gravity="center_vertical"
          android:id="@+id/searchIcon"
          />

</FrameLayout>