<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical" >

    <View
        android:id="@+id/item_fengexian"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f1f0ee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="horizontal"
        android:padding="10dp" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/yidian_store_img"
            android:layout_width="0dp"
            android:layout_weight="2.1"
            android:layout_height="match_parent"
            android:src="@drawable/app_default_icon"
            android:adjustViewBounds="true"
        	android:scaleType="fitXY"
            />
   
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/yidian_item_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="原点牛奶坊"
                    android:textColor="#000"
                    android:textSize="16sp" 
                    />


                <ImageView
                    android:id="@+id/store_info_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/yidian_merchant_details" />
            </LinearLayout>
 			<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                     >
                    <TextView
                        android:id="@+id/yidian_item_paycount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_view_border_or"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:paddingTop="2dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#E28B5E"
                        android:textSize="10sp" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yidian_mercahant_address" />

                <TextView
                    android:id="@+id/yidian_store_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="11sp" />
			<LinearLayout 
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
			    >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yidian_mercahant_diatance" />

                <TextView
                    android:id="@+id/yidian_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="11sp" 
                    />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yidian_mercahant_senttime" />

                <TextView
                    android:id="@+id/yidian_store_sendtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/yidian_item_manjian_ll_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" 
                android:visibility="invisible"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yidian_mercahant_jian" />

                <TextView
                    android:id="@+id/yidian_manjian_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="13sp" 
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/yidian_item_manjian_ll_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" 
                android:visibility="invisible"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yidian_mercahant_jian" />

                <TextView
                    android:id="@+id/yidian_manjian_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/yidian_item_manjian_ll_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" 
                android:visibility="invisible"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yidian_mercahant_jian" />

                <TextView
                    android:id="@+id/yidian_manjian_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>