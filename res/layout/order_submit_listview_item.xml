<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dp" 
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/order_product_iv"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_centerVertical="true"
                android:src="@drawable/lv_se" />

            <TextView
                android:id="@+id/order_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/order_product_iv"
                android:singleLine="true"
                android:text="美国自然开源打果汁算多少速度"
                android:textColor="#cc000000"
                android:textSize="14sp" 
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/order_product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.1"
            android:text="×1"
            android:textColor="#cc000000"
            android:textSize="14sp" 
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/order_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="￥27"
            android:textColor="#cc000000"
            android:textSize="14sp" 
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            />
    </LinearLayout>

    <View
        android:id="@+id/product_list_hengxian"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#DCDCDC"
        />

</LinearLayout>